# Required Secrets
OPENAI_API_KEY=

# Contact details (used by the AI when users ask to contact/schedule)
CONTACT_EMAIL=keerti.hegdev@gmail.com
CONTACT_LINKEDIN_URL=

# Optional: enable server-side email sending for the "contact Keerti" flow
# If unset, the agent will fall back to giving the email address to copy/paste.
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Optional: log user queries (for training)
# Writes append-only NDJSON to: `${QUERY_LOG_DIR}` (or `${DATA_DIR}/query-logs` by default)
QUERY_LOG_ENABLED=false
QUERY_LOG_DIR=

# Optional: email query logs to yourself (requires SMTP_* configured above)
# Modes:
# - off: no emails
# - immediate: send an email on every query (attaches latest slice of the log)
# - daily: send a daily digest at QUERY_LOG_EMAIL_HOUR:QUERY_LOG_EMAIL_MINUTE (server-local time)
QUERY_LOG_EMAIL_MODE=off
QUERY_LOG_EMAIL_TO=
QUERY_LOG_EMAIL_FROM=
QUERY_LOG_EMAIL_SUBJECT=Kairo â€” user query log
QUERY_LOG_EMAIL_MAX_BYTES=1048576
QUERY_LOG_EMAIL_FIRE_AND_FORGET=true

# Required to use the admin endpoints:
# - GET  /admin/query-logs/status
# - GET  /admin/query-logs/download
# - POST /admin/query-logs/send
QUERY_LOG_ADMIN_TOKEN=

# Only used when QUERY_LOG_EMAIL_MODE=daily
QUERY_LOG_EMAIL_HOUR=9
QUERY_LOG_EMAIL_MINUTE=0

# Optional Overrides
PORT=3000
HOST=0.0.0.0
DATA_DIR=./backend/data
PDF_DIR=
WEBSITE_DIR=

# Frontend build config
# If unset, the frontend calls same-origin `/ask` (recommended).
# Set this only if your API is hosted on a different origin (e.g. https://api.example.com).
VITE_API_BASE_URL=
